{
  "compilerOptions": {
    // 指定 ECMAScript 目标版本
    "target": "es5",
    // 指定要包含的库文件
    "lib": ["dom", "dom.iterable", "esnext"],
    // 允许编译 JavaScript 文件
    "allowJs": true,
    // 跳过所有声明文件的类型检查
    "skipLibCheck": true,
    // 启用所有严格类型检查选项
    "strict": true,
    // 确保文件名的大小写一致性
    "forceConsistentCasingInFileNames": true,
    // 不生成输出文件
    "noEmit": true,
    // 启用 CommonJS 和 ES 模块之间的互操作性
    "esModuleInterop": true,
    // 指定模块代码生成
    "module": "esnext",
    // 指定模块解析策略
    "moduleResolution": "node",
    // 允许导入 JSON 模块
    "resolveJsonModule": true,
    // 确保每个文件都可以安全地进行类型检查
    "isolatedModules": true,
    // 指定 JSX 代码生成
    "jsx": "preserve",
    // 启用增量编译
    "incremental": true,
    // 指定要使用的插件
    "plugins": [
      {
        "name": "next"
      }
    ],
    // 指定模块导入的路径别名
    "paths": {
      "@/*": ["./*"]
    }
  },
  // 指定要包含的文件
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.js"],
  // 指定要排除的文件
  "exclude": ["node_modules"]
}
